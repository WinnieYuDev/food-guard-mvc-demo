<%- include('partials/header') %>

<main class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
    <div class="px-4 py-6 sm:px-0">
        <!-- Page Header -->
        <h1 class="text-3xl font-bold text-gray-900 mb-2">Recalls & Product Lookup</h1>
        <p class="text-gray-600 mb-8">Search for product information and check for active recalls.</p>

        <!-- CDC Food Recall Widget -->
        <div class="mb-8">
            <div class="bg-white rounded-lg shadow-sm p-6 border border-gray-200">
                <h2 class="text-xl font-semibold text-gray-900 mb-4">CDC Food Recall Alerts</h2>
                <!-- CDC Widget - This will show official recall alerts -->
                <div data-cdc-widget="FoodRecall" data-instance-name="FoodRecallWidget" 
                     data-style-path="undefined" data-widget-max-width="800px" 
                     data-content-url="undefined"></div>
                <script src="https://tools.cdc.gov/1M1B"></script>
            </div>
        </div>

        <!-- Product Lookup Form -->
        <div class="bg-white rounded-lg shadow-sm p-6 mb-8 border border-gray-200">
            <h2 class="text-xl font-semibold text-gray-900 mb-4">Product Lookup</h2>
            <p class="text-gray-600 mb-4">Enter a product name or barcode to check for recalls and get product information.</p>
            
            <form id="productLookupForm" class="space-y-4">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <label for="barcode" class="block text-sm font-medium text-gray-700 mb-2">Barcode</label>
                        <input type="text" id="barcode" name="barcode" 
                               class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                               placeholder="Enter product barcode (e.g., 1234567890123)">
                    </div>
                    <div>
                        <label for="productName" class="block text-sm font-medium text-gray-700 mb-2">Product Name</label>
                        <input type="text" id="productName" name="productName" 
                               class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                               placeholder="Enter product name">
                    </div>
                </div>
                <button type="submit" 
                        class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-md font-medium transition-colors">
                    Lookup Product
                </button>
            </form>

            <!-- Product Results - This will be filled by JavaScript -->
            <div id="productResults" class="mt-6 hidden">
                <!-- Results will be populated here when user searches -->
            </div>
        </div>

        <!-- Search and Filters Section -->
        <div class="bg-white rounded-lg shadow-sm p-6 mb-8 border border-gray-200">
            <h2 class="text-xl font-semibold text-gray-900 mb-4">Filter Recalls</h2>
            <form method="GET" action="/recalls" id="recallFilters" class="space-y-4">
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
                    <!-- Search -->
                    <div>
                        <label for="search" class="block text-sm font-medium text-gray-700 mb-1">Search Products</label>
                        <input type="text" id="search" name="search" 
                               value="<%= filters.search %>" 
                               placeholder="Search by product, brand..."
                               class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                    </div>
                    
                    <!-- Category Filter -->
                    <div>
                        <label for="category" class="block text-sm font-medium text-gray-700 mb-1">Food Category</label>
                        <select id="category" name="category" 
                                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                            <option value="all">All Categories</option>
                            <% categoryOptions.forEach(option => { %>
                                <option value="<%= option.value %>" 
                                        <%= filters.category === option.value ? 'selected' : '' %>>
                                    <%= option.label %>
                                </option>
                            <% }); %>
                        </select>
                    </div>
                    
                    <!-- Retailer Filter -->
                    <div>
                        <label for="retailer" class="block text-sm font-medium text-gray-700 mb-1">Retailer</label>
                        <select id="retailer" name="retailer" 
                                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                            <option value="all">All Retailers</option>
                            <% retailerOptions.forEach(option => { %>
                                <option value="<%= option.value %>" 
                                        <%= filters.retailer === option.value ? 'selected' : '' %>>
                                    <%= option.label %>
                                </option>
                            <% }); %>
                        </select>
                    </div>
                    
                    <!-- Risk Level Filter -->
                    <div>
                        <label for="riskLevel" class="block text-sm font-medium text-gray-700 mb-1">Risk Level</label>
                        <select id="riskLevel" name="riskLevel" 
                                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                            <option value="all">All Levels</option>
                            <option value="high" <%= filters.riskLevel === 'high' ? 'selected' : '' %>>High Risk</option>
                            <option value="medium" <%= filters.riskLevel === 'medium' ? 'selected' : '' %>>Medium Risk</option>
                            <option value="low" <%= filters.riskLevel === 'low' ? 'selected' : '' %>>Low Risk</option>
                        </select>
                    </div>
                </div>
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <!-- Sort By -->
                    <div>
                        <label for="sortBy" class="block text-sm font-medium text-gray-700 mb-1">Sort By</label>
                        <select id="sortBy" name="sortBy" 
                                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                            <option value="recallDate" <%= filters.sortBy === 'recallDate' ? 'selected' : '' %>>Recall Date</option>
                            <option value="riskLevel" <%= filters.sortBy === 'riskLevel' ? 'selected' : '' %>>Risk Level</option>
                            <option value="title" <%= filters.sortBy === 'title' ? 'selected' : '' %>>Product Name</option>
                        </select>
                    </div>
                    
                    <!-- Sort Order -->
                    <div>
                        <label for="sortOrder" class="block text-sm font-medium text-gray-700 mb-1">Order</label>
                        <select id="sortOrder" name="sortOrder" 
                                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                            <option value="desc" <%= filters.sortOrder === 'desc' ? 'selected' : '' %>>Newest First</option>
                            <option value="asc" <%= filters.sortOrder === 'asc' ? 'selected' : '' %>>Oldest First</option>
                        </select>
                    </div>
                </div>
                
                <div class="flex flex-wrap gap-3">
                    <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-md font-medium transition-colors">
                        Apply Filters
                    </button>
                    <a href="/recalls" class="bg-gray-200 hover:bg-gray-300 text-gray-800 px-6 py-2 rounded-md font-medium transition-colors">
                        Clear All
                    </a>
                </div>
            </form>
        </div>

        <!-- Active Recalls List -->
        <div class="bg-white rounded-lg shadow-sm p-6 border border-gray-200">
            <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-6 gap-4">
                <h2 class="text-xl font-semibold text-gray-900">
                    Active Recalls
                    <% if (recalls.length > 0) { %>
                        <span class="ml-2 bg-red-100 text-red-800 text-sm font-medium px-2.5 py-0.5 rounded-full">
                            <%= recalls.length %> Active
                        </span>
                    <% } %>
                </h2>
            </div>

            <!-- Recalls List -->
            <% if (recalls.length > 0) { %>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    <% recalls.forEach(recall => { %>
                        <div class="border border-gray-200 rounded-lg p-4 hover:bg-gray-50 transition-colors">
                            <!-- Recall Header with Risk Level -->
                            <div class="flex items-start justify-between mb-3">
                                <h3 class="text-lg font-medium text-gray-900"><%= recall.title %></h3>
                                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium 
                                    <%= recall.riskLevel === 'high' ? 'bg-red-100 text-red-800' : 
                                       recall.riskLevel === 'medium' ? 'bg-yellow-100 text-yellow-800' : 
                                       'bg-green-100 text-green-800' %>">
                                    <%= recall.riskLevel.toUpperCase() %> Risk
                                </span>
                            </div>
                            
                            <!-- Product Information -->
                            <div class="mb-3">
                                <div class="flex items-center space-x-3 mb-2">
                                    <div class="w-10 h-10 bg-gradient-to-br from-gray-100 to-gray-200 rounded-full flex items-center justify-center">
                                        <span class="text-lg">
                                            <% if (recall.category === 'poultry') { %>üêî
                                            <% } else if (recall.category === 'vegetables') { %>ü•¶
                                            <% } else if (recall.category === 'shellfish') { %>ü¶ê
                                            <% } else if (recall.category === 'meat') { %>ü•©
                                            <% } else if (recall.category === 'dairy') { %>ü•õ
                                            <% } else if (recall.category === 'fruits') { %>üçé
                                            <% } else { %>üì¶<% } %>
                                        </span>
                                    </div>
                                    <div>
                                        <div class="font-medium text-gray-900"><%= recall.product %></div>
                                        <div class="text-sm text-gray-500"><%= recall.brand %></div>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Recall Description -->
                            <p class="text-gray-600 text-sm mb-3 line-clamp-2"><%= recall.description %></p>
                            
                            <!-- Recall Details -->
                            <div class="space-y-2 text-sm text-gray-500 mb-3">
                                <div class="flex justify-between">
                                    <span>Category:</span>
                                    <span class="font-medium capitalize"><%= recall.category %></span>
                                </div>
                                <div class="flex justify-between">
                                    <span>Retailer:</span>
                                    <span class="font-medium capitalize">
                                        <%= recall.retailer ? recall.retailer.split('-').map(word => word.charAt(0).toUpperCase() + word.slice(1)).join(' ') : 'Various Retailers' %>
                                    </span>
                                </div>
                                <div class="flex justify-between">
                                    <span>Source:</span>
                                    <span class="font-medium"><%= recall.source %></span>
                                </div>
                            </div>
                            
                            <!-- Footer -->
                            <div class="flex justify-between items-center text-xs text-gray-500 border-t border-gray-200 pt-3">
                                <span class="flex items-center">
                                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                    </svg>
                                    <%= new Date(recall.recallDate).toLocaleDateString() %>
                                </span>
                                <span class="flex items-center">
                                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                    </svg>
                                    <%= Array.isArray(recall.statesAffected) ? recall.statesAffected.join(', ') : 'Nationwide' %>
                                </span>
                            </div>

                            <!-- View Details Button -->
                            <div class="mt-3">
                                <a 
                                href="<%= recall.articleLink || '#' %>" 
                                target="_blank"
                                class="inline-flex items-center px-4 py-2 bg-red-600 text-white text-sm font-medium rounded-md hover:bg-red-700 transition-colors"
                                >
                                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                                </svg>
                                View Full Details
                                </a>
                            </div>
                        </div>
                    <% }); %>
                </div>

                <!-- Pagination -->
                <% if (pagination.totalPages > 1) { %>
                    <div class="mt-6 flex justify-center space-x-2">
                        <!-- Previous Button -->
                        <% if (pagination.hasPrev) { %>
                            <a href="/recalls?page=<%= pagination.page - 1 %><%= buildQueryString(filters) %>" 
                               class="px-3 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50 transition-colors">
                                Previous
                            </a>
                        <% } %>
                        
                        <!-- Page Numbers -->
                        <% for (let i = 1; i <= pagination.totalPages; i++) { %>
                            <a href="/recalls?page=<%= i %><%= buildQueryString(filters) %>" 
                               class="px-3 py-2 border <%= i === pagination.page ? 'border-blue-600 bg-blue-600 text-white' : 'border-gray-300 text-gray-700 hover:bg-gray-50' %> rounded-md text-sm font-medium transition-colors">
                                <%= i %>
                            </a>
                        <% } %>
                        
                        <!-- Next Button -->
                        <% if (pagination.hasNext) { %>
                            <a href="/recalls?page=<%= pagination.page + 1 %><%= buildQueryString(filters) %>" 
                               class="px-3 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50 transition-colors">
                                Next
                            </a>
                        <% } %>
                    </div>
                <% } %>

            <% } else { %>
                <!-- No Recalls Message -->
                <div class="text-center py-8">
                    <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
                        <span class="text-2xl">‚úÖ</span>
                    </div>
                    <h3 class="text-lg font-medium text-gray-900 mb-2">No Active Recalls</h3>
                    <p class="text-gray-600">There are currently no active food recalls matching your filters.</p>
                </div>
            <% } %>
        </div>
    </div>
</main>

<!-- Include external JavaScript file -->
<script src="/js/recalls.js"></script>

<script>
    // Auto-submit form when filters change
    document.addEventListener('DOMContentLoaded', function() {
        const filters = ['category', 'retailer', 'riskLevel', 'sortBy', 'sortOrder'];
        
        filters.forEach(filterId => {
            const element = document.getElementById(filterId);
            if (element) {
                element.addEventListener('change', function() {
                    document.getElementById('recallFilters').submit();
                });
            }
        });

        // Product lookup form handler
        const productLookupForm = document.getElementById('productLookupForm');
        if (productLookupForm) {
            productLookupForm.addEventListener('submit', function(e) {
                e.preventDefault();
                const barcode = document.getElementById('barcode').value;
                const productName = document.getElementById('productName').value;
                
                if (!barcode && !productName) {
                    alert('Please enter either a barcode or product name');
                    return;
                }
                
                // For now, show a placeholder message
                const resultsDiv = document.getElementById('productResults');
                resultsDiv.innerHTML = `
                    <div class="bg-blue-50 border border-blue-200 rounded-md p-4">
                        <p class="text-blue-800">Product lookup functionality coming soon! This will integrate with FDA and USDA APIs to provide real-time product information and recall checks.</p>
                        <p class="text-blue-700 text-sm mt-2">Searched for: ${barcode || productName}</p>
                    </div>
                `;
                resultsDiv.classList.remove('hidden');
            });
        }
    });
</script>

<%
// Helper function to build query string for pagination
function buildQueryString(filters) {
    const params = [];
    if (filters.search) params.push(`search=${encodeURIComponent(filters.search)}`);
    if (filters.category !== 'all') params.push(`category=${filters.category}`);
    if (filters.retailer !== 'all') params.push(`retailer=${filters.retailer}`);
    if (filters.riskLevel !== 'all') params.push(`riskLevel=${filters.riskLevel}`);
    if (filters.sortBy !== 'recallDate') params.push(`sortBy=${filters.sortBy}`);
    if (filters.sortOrder !== 'desc') params.push(`sortOrder=${filters.sortOrder}`);
    return params.length > 0 ? '&' + params.join('&') : '';
}
%>

