<%- include('partials/header') %>

<main class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
    <div class="px-4 py-6 sm:px-0">
        <!-- Page Header -->
        <h1 class="text-3xl font-bold text-gray-900 mb-2">Recalls & Product Lookup</h1>
        <p class="text-gray-600 mb-8">Search for product information and check for active recalls.</p>

        <!-- CDC Food Recall Widget -->
        <div class="mb-8">
            <div class="bg-white rounded-lg shadow-sm p-6 border border-gray-200">
                <h2 class="text-xl font-semibold text-gray-900 mb-4">CDC Food Recall Alerts</h2>
                <!-- CDC Widget - This will show official recall alerts -->
                <div 
                data-cdc-widget="FoodRecall" 
                data-instance-name="FoodRecallWidget" 
                data-style-path="https://tools.cdc.gov/1M1B/css/cdc-widget.css"
                data-widget-max-width="800px" 
                data-content-url="https://tools.cdc.gov/api/v2/resources/media/40483.rss"
                ></div>
                <script src="https://tools.cdc.gov/1M1B"></script>
            </div>
        </div>

        <!-- Product Lookup Form -->
        <div class="bg-white rounded-lg shadow-sm p-6 mb-8 border border-gray-200">
            <h2 class="text-xl font-semibold text-gray-900 mb-4">Product Lookup</h2>
            <p class="text-gray-600 mb-4">Enter a product name or barcode to check for recalls and get product information.</p>
            
            <form id="productLookupForm" class="space-y-4">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <label for="barcode" class="block text-sm font-medium text-gray-700 mb-2">Barcode</label>
                        <input type="text" id="barcode" name="barcode" 
                               class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-usda-blue focus:border-transparent"
                               placeholder="Enter product barcode (e.g., 1234567890123)">
                    </div>
                    <div>
                        <label for="productName" class="block text-sm font-medium text-gray-700 mb-2">Product Name</label>
                        <input type="text" id="productName" name="productName" 
                               class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-usda-blue focus:border-transparent"
                               placeholder="Enter product name">
                    </div>
                </div>
                <button type="submit" 
                        class="bg-usda-blue hover:bg-usda-darkblue text-white px-6 py-2 rounded-md font-medium transition-colors">
                    Lookup Product
                </button>
            </form>

            <!-- Product Results - This will be filled by JavaScript -->
            <div id="productResults" class="mt-6 hidden">
                <!-- Results will be populated here when user searches -->
            </div>
        </div>

        <!-- Active Recalls List -->
        <div class="bg-white rounded-lg shadow-sm p-6 border border-gray-200">
            <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-6 gap-4">
                <h2 class="text-xl font-semibold text-gray-900">Active Recalls</h2>
                
                <!-- Filters -->
                <div class="flex flex-col sm:flex-row gap-4">
                    <select id="riskFilter" class="px-3 py-2 border border-gray-300 rounded-md text-sm focus:ring-2 focus:ring-usda-blue">
                        <option value="all">All Risk Levels</option>
                        <option value="High">High Risk</option>
                        <option value="Medium">Medium Risk</option>
                        <option value="Low">Low Risk</option>
                    </select>
                    <input type="text" id="searchFilter" placeholder="Search recalls..." 
                           class="px-3 py-2 border border-gray-300 rounded-md text-sm w-full sm:w-48 focus:ring-2 focus:ring-usda-blue">
                </div>
            </div>

            <!-- Recalls List -->
            <% if (recalls.length > 0) { %>
                <div class="space-y-4">
                    <% recalls.forEach(recall => { %>
                        <div class="border border-gray-200 rounded-lg p-4 hover:bg-gray-50 transition-colors">
                            <!-- Recall Header with Risk Level -->
                            <div class="flex items-start justify-between mb-3">
                                <h3 class="text-lg font-medium text-gray-900"><%= recall.title %></h3>
                                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium 
                                    <%= recall.riskLevel === 'High' ? 'bg-red-100 text-red-800' : 
                                       recall.riskLevel === 'Medium' ? 'bg-yellow-100 text-yellow-800' : 
                                       'bg-green-100 text-green-800' %>">
                                    <%= recall.riskLevel %> Risk
                                </span>
                            </div>
                            
                            <!-- Recall Description -->
                            <p class="text-gray-600 mb-3"><%= recall.description %></p>
                            
                            <!-- Recall Details -->
                            <div class="flex flex-col sm:flex-row sm:items-center justify-between text-sm text-gray-500 gap-2">
                                <div>
                                    <strong>Reason:</strong> <%= recall.reason %>
                                </div>
                                <div class="flex gap-4">
                                    <span><strong>Date:</strong> <%= new Date(recall.date).toLocaleDateString() %></span>
                                    <span><strong>Source:</strong> <%= recall.source %></span>
                                </div>
                            </div>
                            
                            <!-- Affected Products -->
                            <% if (recall.products && recall.products.length > 0) { %>
                                <div class="mt-3 pt-3 border-t border-gray-200">
                                    <h4 class="text-sm font-medium text-gray-700 mb-2">Affected Products:</h4>
                                    <div class="space-y-2">
                                        <% recall.products.forEach(product => { %>
                                            <div class="flex items-center space-x-3">
                                                <!-- Product Image -->
                                                <% if (product.image) { %>
                                                    <img src="<%= product.image %>" alt="<%= product.name %>" 
                                                         class="w-10 h-10 object-cover rounded">
                                                <% } %>
                                                <div>
                                                    <div class="text-sm font-medium"><%= product.name %></div>
                                                    <% if (product.brand) { %>
                                                        <div class="text-xs text-gray-500">Brand: <%= product.brand %></div>
                                                    <% } %>
                                                </div>
                                            </div>
                                        <% }); %>
                                    </div>
                                </div>
                            <% } %>
                        </div>
                    <% }); %>
                </div>

                <!-- Pagination -->
                <% if (pagination.totalPages > 1) { %>
                    <div class="mt-6 flex justify-center space-x-2">
                        <!-- Previous Button -->
                        <% if (pagination.hasPrev) { %>
                            <a href="?page=<%= pagination.page - 1 %>" 
                               class="px-3 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50 transition-colors">
                                Previous
                            </a>
                        <% } %>
                        
                        <!-- Page Numbers -->
                        <% for (let i = 1; i <= pagination.totalPages; i++) { %>
                            <a href="?page=<%= i %>" 
                               class="px-3 py-2 border <%= i === pagination.page ? 'border-usda-blue bg-usda-blue text-white' : 'border-gray-300 text-gray-700 hover:bg-gray-50' %> rounded-md text-sm font-medium transition-colors">
                                <%= i %>
                            </a>
                        <% } %>
                        
                        <!-- Next Button -->
                        <% if (pagination.hasNext) { %>
                            <a href="?page=<%= pagination.page + 1 %>" 
                               class="px-3 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50 transition-colors">
                                Next
                            </a>
                        <% } %>
                    </div>
                <% } %>

            <% } else { %>
                <!-- No Recalls Message -->
                <div class="text-center py-8">
                    <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
                        <span class="text-2xl">âœ…</span>
                    </div>
                    <h3 class="text-lg font-medium text-gray-900 mb-2">No Active Recalls</h3>
                    <p class="text-gray-600">There are currently no active food recalls matching your filters.</p>
                </div>
            <% } %>
        </div>
    </div>
</main>

<!-- Include external JavaScript file -->
<script src="/js/recalls.js"></script>

<%- include('partials/footer') %>