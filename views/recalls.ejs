<!--
    views/recalls.ejs

    Purpose: Recalls listing and product lookup UI. Expects `recalls`,
    `filters` and other helper fields provided by `controllers/recalls.js`.
    Includes a client-side product lookup that calls the server proxy API.
-->
<%- include('partials/header') %>

<main class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
    <div class="px-4 py-6 sm:px-0">
        
        <h1 class="text-3xl font-bold text-gray-900 mb-2">Recalls & Product Lookup</h1>
        <p class="text-gray-600 mb-8">Search for product information and check for active recalls.</p>
        <div class="bg-white rounded-lg shadow-sm p-6 mb-8 border border-gray-200">
            <h2 class="text-xl font-semibold text-gray-900 mb-4">Recent Food Recall News</h2>
            
            <ul id="recallNewsList" class="space-y-3 text-sm text-gray-700">
                <li>Loading recent recalls...</li>
            </ul>
        </div>
        <div class="bg-white rounded-lg shadow-sm p-6 mb-8 border border-gray-200">
            <h2 class="text-xl font-semibold text-gray-900 mb-4">Product Lookup</h2>
            <p class="text-gray-600 mb-4">Enter a product name or barcode to check for allergens and get product information.</p>
            
            <form id="productLookupForm" class="space-y-4">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <label for="barcode" class="block text-sm font-medium text-gray-700 mb-2">Barcode</label>
                        <input type="text" id="barcode" name="barcode" 
                               class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                               placeholder="Enter product barcode (e.g., 1234567890123)">
                    </div>
                    <div>
                        <label for="productName" class="block text-sm font-medium text-gray-700 mb-2">Product Name</label>
                        <input type="text" id="productName" name="productName" 
                               class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                               placeholder="Enter product name">
                    </div>
                </div>
                <button type="submit" id="searchButton"
                        class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-md font-medium transition-colors">
                    Lookup Product
                </button>
            </form>
            <div class="mt-6">
                <div id="productResults" class="w-full hidden">
                    
                </div>
            </div>
        </div>
        <div class="bg-white rounded-lg shadow-sm p-6 mb-8 border border-gray-200">
            <h2 class="text-xl font-semibold text-gray-900 mb-4">Filter Recalls</h2>
            <form method="GET" action="/recalls" id="recallFilters" class="space-y-4">
                <input type="hidden" id="pageInput" name="page" value="<%= pagination && pagination.page ? pagination.page : 1 %>" />
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
                    <div>
                        <label for="search" class="block text-sm font-medium text-gray-700 mb-1">Search Products</label>
                        <input type="text" id="search" name="search" 
                               value="<%= filters.search %>" 
                               placeholder="Search by product, brand..."
                               class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                    </div>
                    <div>
                        <label for="category" class="block text-sm font-medium text-gray-700 mb-1">Food Category</label>
                        <select id="category" name="category" 
                                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                            <option value="all">All Categories</option>
                            <% categoryOptions.forEach(option => { %>
                                <option value="<%= option.value %>" 
                                        <%= filters.category === option.value ? 'selected' : '' %>>
                                    <%= option.label %>
                                </option>
                            <% }); %>
                        </select>
                    </div>
                    <div>
                        <label for="retailer" class="block text-sm font-medium text-gray-700 mb-1">Retailer</label>
                        <select id="retailer" name="retailer" 
                                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                            <% retailerOptions.forEach(option => { %>
                                <option value="<%= option.value %>" 
                                        <%= filters.retailer === option.value ? 'selected' : '' %>>
                                    <%= option.label %>
                                </option>
                            <% }); %>
                        </select>
                    </div>
                    <div>
                        <label for="region" class="block text-sm font-medium text-gray-700 mb-1">Region</label>
                        <select id="region" name="region" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                            <% regionOptions.forEach(option => { %>
                                <option value="<%= option.value %>" <%= (filters.region || 'all') === option.value ? 'selected' : '' %>><%= option.label %></option>
                            <% }); %>
                        </select>
                    </div>
                    <div>
                        <label for="riskLevel" class="block text-sm font-medium text-gray-700 mb-1">Risk Level</label>
                        <select id="riskLevel" name="riskLevel" 
                                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                            <option value="all">All Levels</option>
                            <option value="high" <%= filters.riskLevel === 'high' ? 'selected' : '' %>>High Risk</option>
                            <option value="medium" <%= filters.riskLevel === 'medium' ? 'selected' : '' %>>Medium Risk</option>
                            <option value="low" <%= filters.riskLevel === 'low' ? 'selected' : '' %>>Low Risk</option>
                        </select>
                    </div>
                </div>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <label for="sortOrder" class="block text-sm font-medium text-gray-700 mb-1">Order</label>
                        <select id="sortOrder" name="sortOrder" 
                                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                            <option value="desc" <%= filters.sortOrder === 'desc' ? 'selected' : '' %>>Newest First</option>
                            <option value="asc" <%= filters.sortOrder === 'asc' ? 'selected' : '' %>>Oldest First</option>
                        </select>
                    </div>
                </div>
                <div class="flex flex-wrap gap-3">
                    <button id="applyFiltersBtn" type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-md font-medium transition-colors">
                        Apply Filters
                    </button>
                    <a href="/recalls" class="bg-gray-200 hover:bg-gray-300 text-gray-800 px-6 py-2 rounded-md font-medium transition-colors">
                        Clear All
                    </a>
                    <label class="ml-4 inline-flex items-center text-sm text-gray-700">
                        <input id="includeInactive" name="includeInactive" type="checkbox" value="true" class="mr-2" <%= (filters && filters.includeInactive === 'true') ? 'checked' : '' %> />
                        Include inactive
                    </label>
                </div>
            </form>
        </div>
        <div class="bg-white rounded-lg shadow-sm p-6 border border-gray-200">
            <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-6 gap-4">
                <% const activeCount = Array.isArray(recalls) ? recalls.filter(r => (r.isActive === undefined || r.isActive === true)).length : 0; %>
                <h2 class="text-xl font-semibold text-gray-900">
                        Active Recalls
                        <% if (activeCount > 0) { %>
                            <span class="ml-2 bg-red-100 text-red-800 text-sm font-medium px-2.5 py-0.5 rounded-full">
                                <%= activeCount %> Active
                            </span>
                        <% } %>
                    </h2>
            </div>
            <% if (recalls.length > 0) { %>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    <% recalls.forEach(recall => { %>
                        <div class="border border-gray-200 rounded-lg p-4 hover:bg-gray-50 transition-colors">
                            
                            <div class="flex items-start justify-between mb-3">
                                <h3 class="text-lg font-medium text-gray-900"><%= recall.title %></h3>
                                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium 
                                    <%= recall.riskLevel === 'high' ? 'bg-red-100 text-red-800' : 
                                       recall.riskLevel === 'medium' ? 'bg-yellow-100 text-yellow-800' : 
                                       'bg-green-100 text-green-800' %>">
                                    <%= recall.riskLevel.toUpperCase() %> Risk
                                </span>
                            </div>
                            <p class="text-gray-600 text-sm mb-3 line-clamp-2"><%= recall.description %></p>
                            <div class="space-y-2 text-sm text-gray-500 mb-3">
                                <div class="space-y-2 text-sm text-gray-500 mb-2">
                                    <div>
                                        <span class="text-sm text-gray-600">Categories:</span>
                                        <div class="mt-1 flex items-center flex-wrap gap-2">
                                            <% const cats = Array.isArray(recall.categories) && recall.categories.length > 0 ? recall.categories.slice(0,3) : [recall.category]; %>
                                            <% cats.forEach(c => { %>
                                                <span class="text-xs font-medium px-2 py-1 rounded-full bg-gray-100 text-gray-800 capitalize"><%= String(c).replace(/[-_]/g, ' ') %></span>
                                            <% }); %>
                                        </div>
                                    </div>
                                    <div>
                                        <span class="text-sm text-gray-600">Retailer:</span>
                                        <div class="mt-1 font-medium capitalize">
                                            <%= recall.retailer ? recall.retailer.split('-').map(word => word.charAt(0).toUpperCase() + word.slice(1)).join(' ') : 'Various Retailers' %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="flex justify-between items-center text-xs text-gray-500 border-t border-gray-200 pt-3">
                                <span class="flex items-center">
                                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                    </svg>
                                    <%= new Date(recall.recallDate).toLocaleDateString() %>
                                </span>
                                <span class="flex items-center">
                                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                    </svg>
                                    <%= Array.isArray(recall.statesAffected) ? recall.statesAffected.join(', ') : 'Nationwide' %>
                                </span>
                            </div>
                            <div class="mt-3 flex justify-end">
                                <a href="<%= recall.articleLink || (recall.rawData && recall.rawData.field_recall_url) || '#' %>" target="_blank" rel="noopener noreferrer" class="text-sm bg-blue-600 hover:bg-blue-700 text-white px-3 py-1 rounded-md">View Details</a>
                                <% if (user) { %>
                                    <% if (recall && recall._id) { %>
                                        <% const isPinned = pinnedRecallIds && pinnedRecallIds.includes(String(recall._id)); %>
                                        <% if (isPinned) { %>
                                            <form action="/recalls/<%= recall._id %>/unpin" method="POST" class="inline ml-2">
                                                <button type="submit" class="text-sm bg-gray-100 hover:bg-gray-200 text-gray-800 px-3 py-1 rounded-md">Unpin</button>
                                            </form>
                                        <% } else { %>
                                            <form action="/recalls/<%= recall._id %>/pin" method="POST" class="inline ml-2">
                                                <button type="submit" class="text-sm bg-gray-100 hover:bg-gray-200 text-gray-800 px-3 py-1 rounded-md">Pin</button>
                                            </form>
                                        <% } %>
                                    <% } else { %>
                                        <% 
                                            // Determine provider recall identifier from available fields
                                            const providerId = recall.recallId || recall.recall_number || (recall.rawData && (recall.rawData.recall_number || recall.rawData.RecallNumber || recall.rawData.RecallID || recall.rawData.RecallId));
                                        %>
                                        <% if (providerId) { %>
                                            <form action="/recalls/pin-by/<%= encodeURIComponent(providerId) %>" method="POST" class="inline ml-2">
                                                <button type="submit" class="text-sm bg-gray-100 hover:bg-gray-200 text-gray-800 px-3 py-1 rounded-md">Save & Pin</button>
                                            </form>
                                        <% } else { %>
                                            <button type="button" class="text-sm bg-gray-50 text-gray-500 px-3 py-1 rounded-md ml-2" title="Pin unavailable for this result">Pin</button>
                                        <% } %>
                                    <% } %>
                                <% } %>
                            </div>
                        </div>
                    <% }); %>
                </div>
                <% if (pagination.totalPages > 1) { %>
                    <div class="mt-6 flex justify-center space-x-2">
                        <% if (pagination.hasPrev) { %>
                            <a href="/recalls?page=<%= pagination.page - 1 %><%= buildQueryString(filters) %>" 
                               class="px-3 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50 transition-colors">
                                Previous
                            </a>
                        <% } %>
                        
                        <% for (let i = 1; i <= pagination.totalPages; i++) { %>
                            <a href="/recalls?page=<%= i %><%= buildQueryString(filters) %>" 
                               class="px-3 py-2 border <%= i === pagination.page ? 'border-blue-600 bg-blue-600 text-white' : 'border-gray-300 text-gray-700 hover:bg-gray-50' %> rounded-md text-sm font-medium transition-colors">
                                <%= i %>
                            </a>
                        <% } %>
                        
                        <% if (pagination.hasNext) { %>
                            <a href="/recalls?page=<%= pagination.page + 1 %><%= buildQueryString(filters) %>" 
                               class="px-3 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50 transition-colors">
                                Next
                            </a>
                        <% } %>
                    </div>
                <% } %>

            <% } else { %>
                <div class="text-center py-8">
                    <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
                        <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                    </div>
                    <h3 class="text-lg font-medium text-gray-900 mb-2">No Active Recalls</h3>
                    <p class="text-gray-600">There are currently no active food recalls matching your filters.</p>
                </div>
            <% } %>
        </div>
    </div>
</main>


<script src="/js/recalls.js"></script>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const filters = ['category', 'retailer', 'riskLevel', 'sortOrder', 'includeInactive'];
        const pageInput = document.getElementById('pageInput');
        const applyBtn = document.getElementById('applyFiltersBtn');
        filters.forEach(filterId => {
            const element = document.getElementById(filterId);
            if (!element) return;
            element.addEventListener('change', () => {
                // Preserve current page when toggling 'includeInactive'.
                // For other filter changes, reset to page 1 so results start at the beginning.
                if (filterId === 'includeInactive') {
                    // keep current pageInput.value
                } else {
                    if (pageInput) pageInput.value = '1';
                }
                document.getElementById('recallFilters').submit();
            });
        });
        // When the user clicks the Apply Filters button, reset to page 1
        if (applyBtn) {
            applyBtn.addEventListener('click', function() {
                if (pageInput) pageInput.value = '1';
            });
        }
    });
</script>

<%
function buildQueryString(filters) {
    const params = [];
    if (filters.search) params.push(`search=${encodeURIComponent(filters.search)}`);
    if (filters.category !== 'all') params.push(`category=${filters.category}`);
    if (filters.retailer !== 'all') params.push(`retailer=${filters.retailer}`);
    if (filters.riskLevel !== 'all') params.push(`riskLevel=${filters.riskLevel}`);
    if (filters.sortOrder && filters.sortOrder !== 'desc') params.push(`sortOrder=${filters.sortOrder}`);
    return params.length > 0 ? '&' + params.join('&') : '';
}
%>

<%- include('partials/footer') %>